@page "/Registrados"

@using BlazorCRUD.Shared;
@using CurrieTechnologies.Razor.SweetAlert2;
@using BlazorCRUD.Client.Services;

@inject SweetAlertService Swal;
@inject IPersonasSevices personaServices;

<h3>Registro de Personas</h3>

<a class="btn btn-success btn-sm mb-3" href="Registro">Nuevo Usuario</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>WhatsApp</th>
            <th>Fecha De Registro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(listaPersona == null)
        {
            <tr>
                <td colspan="9" align="center">
                    <img style="width:50px" src="https://media.tenor.com/On7kvXhzml4AAAAj/loading-gif.gif"/>
                </td>
            </tr>
        }
        else
        {
            @foreach(var item in listaPersona)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Direccion</td>
                    <td>@item.Telefono</td>
                    <td>@item.WhatsApp</td>
                    <td>@item.IdRoles</td>
                    <td>@item.FechaRegitro</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="Registro/@item.Id">
                            <i class="oi oi-pencil"></i>
                        </a>
                        <button type="button" class="btn btn-danger btn btn-sm ms-2" @onclick="(() => Eliminar(item.Id))">
                            <i class="oi oi-trash"></i>
                        </button>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

@code {
    List<PersonasShared>? listaPersona = null;

    protected override async Task OnInitializedAsync()
    {
        listaPersona = await personaServices.Lista();
    }

    private async Task Eliminar(int id)
    {
        var resultado = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar",
            Text = "¿Desea Eliminar el Usuairo?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true
        });

        if(resultado.IsConfirmed)
        {
            var eliminado = await personaServices.Eliminar(id);

            if (eliminado)
                listaPersona = listaPersona!.FindAll(e => e.Id != id);
        }
    }
}
